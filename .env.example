# BJDMS Production Environment Template

# Core Database (PostgreSQL 18)
POSTGRES_USER=bjdms_admin
POSTGRES_PASSWORD=CHANGE_ME_SECURELY
POSTGRES_DB=bjdms_prod
DATABASE_URL=postgresql://bjdms_admin:CHANGE_ME_SECURELY@postgres:5432/bjdms_prod?sslmode=disable

# Cache & Real-time (Redis 8.4)
REDIS_URL=redis://redis:6379

# Intelligence (Python Analytics)
ANALYTICS_URL=http://analytics:8000

# Security (JWT)
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=CHANGE_ME
JWT_REFRESH_SECRET=CHANGE_ME
ENV=production

# Public Endpoints
# Change to https://arint.win for production
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# Search Intelligence (OpenSearch)
OPENSEARCH_URL=http://opensearch:9200

# SMS Gateway (Bangladesh Standard)
SMS_API_KEY=
SMS_SENDER_ID=Jubodal
